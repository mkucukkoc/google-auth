{
  "name": "avenia-server",
  "version": "1.0.0",
  "description": "Avenia Backend Server",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && mkdir -p dist/templates && cp -R src/templates dist/templates",
    "test": "jest",
    "test:endpoints": "jest test/endpoints --verbose",
    "test:performance": "jest test/performance --verbose",
    "test:regression": "jest test/regression --verbose",
    "test:all": "node test/run-tests.js",
    "test:suite": "node test/run-tests.js --suite",
    "test:auth": "node test/run-tests.js --suite auth",
    "test:chat": "node test/run-tests.js --suite chat",
    "test:pdf": "node test/run-tests.js --suite pdf",
    "test:presentation": "node test/run-tests.js --suite presentation",
    "test:notifications": "node test/run-tests.js --suite notifications",
    "test:load": "node test/run-tests.js --performance",
    "test:endpoints-only": "node test/run-tests.js --endpoints",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@sentry/node": "^10.15.0",
    "@sentry/profiling-node": "^10.15.0",
    "@types/axios": "^0.9.36",
    "@types/firebase": "^2.4.32",
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.1",
    "argon2": "^0.44.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "expo-server-sdk": "^4.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase": "^12.3.0",
    "firebase-admin": "^12.7.0",
    "form-data": "^4.0.0",
    "google-auth-library": "^9.4.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openapi-types": "^12.1.3",
    "pdf-parse": "^2.1.7",
    "picomatch": "^4.0.3",
    "pino": "^8.16.2",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.11",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "firebase-tools": "^14.19.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "avenia",
    "ai",
    "backend",
    "api"
  ],
  "author": "Avenia Team",
  "license": "MIT"
}
